{
  "name": "axiom",
  "displayName": "Axiom",
  "description": "Editor-native Assistant. Fast, Predictable, Local.",
  "version": "0.2.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "axiom-sidebar",
          "title": "Axiom",
          "icon": "icon.svg"
        }
      ]
    },
    "views": {
      "axiom-sidebar": [
        {
          "type": "webview",
          "id": "axiom.chatView",
          "icon": "icon.svg",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "axiom.focusChat",
        "title": "Axiom: Open Chat",
        "category": "Axiom"
      }
    ],
    "configuration": {
      "title": "Axiom",
      "properties": {
        "axiom.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to the Python interpreter."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint frontend",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^18.x",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "esbuild": "^0.19.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.0.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}