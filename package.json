{
  "name": "axiom",
  "displayName": "Axiom",
  "description": "Editor-native AI with isolated interaction loops.",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "axiom.chat",
        "title": "Axiom: Chat",
        "category": "Axiom"
      }
    ],
    "configuration": {
      "title": "Axiom",
      "properties": {
        "axiom.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to the Python interpreter used for the Axiom backend."
        },
        "axiom.enableGhostText": {
          "type": "boolean",
          "default": true,
          "description": "Enable inline ghost text completions."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "check-types": "tsc --noEmit",
    "lint": "eslint frontend",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.95.0",
    "@types/node": "^20.x",
    "typescript-eslint": "^8.10.0",
    "eslint": "^9.13.0",
    "esbuild": "^0.23.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.6.3",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.1"
  }
}